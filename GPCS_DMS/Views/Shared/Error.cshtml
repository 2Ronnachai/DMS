@model GPCS_DMS.Models.ErrorPageViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Error";
    var statusCode = Model?.StatusCode ?? 500;
    var message = Model?.Message ?? "An unexpected error occurred.";
    var requestId = Model?.RequestId;
}
@section Styles {
    <style>
            .error-wrapper {
                min-height: calc(100vh - 180px); /* Adjust for navbar height */
                display: flex;
                align-items: center;
                justify-content: center;
            }
    </style>
}
<div class="error-wrapper">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4 p-md-5 text-center">
                        <div class="display-1 fw-bold text-muted">@statusCode</div>
                        <h1 class="h3 mb-3">@message</h1>

                        @if (!string.IsNullOrWhiteSpace(requestId))
                        {
                            <p class="text-muted mb-4">
                                Request ID: <span class="fw-semibold">@requestId</span>
                            </p>
                        }
                        else
                        {
                            <div class="mb-4"></div>
                        }

                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                            <button type="button" class="dialog-btn dialog-btn-ok" onclick="location.href='/'">Go to
                                Home</button>
                                <button type="button" class="dialog-btn dialog-btn-cancel" onclick="history.back()">Go
                                    Back</button>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(Model?.Path))
                                {
                                    <p class="text-muted small mt-4 mb-0">
                                        Path: @Model.Path
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>