@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Data Maintenance System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GPCS_DMS.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/application/app-notification.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/application/app-dialog.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/application/app-loading.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    @await RenderSectionAsync("Styles", required: false)
    <link href="~/css/devextreme/dx.light.css" rel="stylesheet" />
    <script src="~/js/devextreme/jquery.js"></script>

    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>

    <script src="~/js/devextreme/dx-exceljs-fork.min.js"></script>
    <script src="~/js/devextreme/filesaver.min.js"></script>
    
    <script src="~/js/devextreme-license.js"></script>

    <script>
        window.APP_CONFIG = {
            baseUrl: "@Configuration["ApiSettings:BaseUrl"]",
            qcsUrl: {
                view: "@Configuration["ApiSettings:QCSUrl:View"]",
                service: "@Configuration["ApiSettings:QCSUrl:Service"]"
            },
            gpcsUrl: "@Configuration["ApiSettings:GPCSUrl"]",
            host: "@(Context.Request.PathBase)" + "/"
        };

        if (!window.APP_CONFIG.baseUrl) {
            console.error("API Base URL is not configured properly.");
        };
    </script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Application" asp-action="Index">
                    DMS
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Application" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <!-- Data Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Data
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <h6 class="dropdown-header">GPCS Data</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="GPCSMaterial">
                                        🔧 Material
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="GPCSItem">
                                        📦 Item
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="GPCSInventory">
                                        📋 Inventory
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <h6 class="dropdown-header">Monitoring</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="Material">
                                        📈 Material Monitor
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="Item">
                                        📊 Item Monitor
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Data" asp-action="Supplier">
                                        🏢 Supplier
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Reports Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <h6 class="dropdown-header">Application</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="Index">
                                        📉 Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="Application">
                                        📄 Applications
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="ApplicationHistory">
                                        🕒 Application History
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Report" asp-action="FileAttachment">
                                        📎 File Attachments
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <h6 class="dropdown-header">Stock Reports</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" asp-controller="Report" asp-action="StockControl">
                                        📊 Stock Control
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Settings Dropdown -->
                        @if (User.FindFirst("UserType")?.Value == "Developer" || 
                            User.FindFirst("UserType")?.Value == "Administrator")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Settings
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <h6 class="dropdown-header">User Management</h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Account">
                                            👤 Account
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Purchaser">
                                            🛒 Purchaser
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="CostCenter">
                                            💼 Cost Center
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <h6 class="dropdown-header">System Config</h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Category">
                                            📑 Category
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="MaterialType">
                                            🔖 Material Type
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Unit">
                                            📏 Unit
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Supplier">
                                            🏢 Supplier
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="SupplierPurchaser">
                                            🔗 Supplier-Purchaser
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <h6 class="dropdown-header">Task</h6>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="TaskManagement">
                                            ⏳ Task Management
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <!-- Audit Log for System Audit Trail -->
                    </ul>

                    <!-- User Info -->
                    <div class="navbar-text">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span>@User.FindFirst("FullName")?.Value</span>
                        }
                        else
                        {
                            <span>Guest</span>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <span>&copy; 2025 Data Maintenance System</span>
        </div>
    </footer>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/application/app-core.js"></script>
    <script src="~/js/application/app-notification.js"></script>
    <script src="~/js/application/app-dialog.js"></script>
    <script src="~/js/application/app-loading.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>