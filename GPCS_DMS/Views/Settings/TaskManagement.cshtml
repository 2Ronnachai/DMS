@{
    ViewData["Title"] = "Task Management Settings";
}

@section Styles {
    <link rel="stylesheet" href="~/css/grid.css" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="jp-minimal-header">
        <h2>Task Management</h2>
        <p>Manage your task settings efficiently using the grid below.</p>
    </div>
    <div class="grid-wrapper">
        <div id="gridOutBoxEventsManagement"></div>
    </div>
</div>

@section Scripts {
    <partial name="_GridScripts" />
    <script src="~/js/grids/managements/outboxstatus-management-config.js"></script>
    
    <script>
        $(document).ready(function () {
            const grid = GridFactory.createGrid(OutBoxEventsManagementGridConfig);
        });
    </script>
}