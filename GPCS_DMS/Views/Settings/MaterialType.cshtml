@{
    ViewData["Title"] = "Material Type Management";
}
@section Styles {
    <link rel="stylesheet" href="~/css/grid.css" asp-append-version="true" />
}

<div class="container-fluid">
    <div class="jp-minimal-header">
        <h2>Material Type Management</h2>
        <p>Manage your material type settings efficiently using the grid below.</p>
    </div>
    <div class="grid-wrapper">
        <div id="gridMaterialTypeManagement"></div>
    </div>
</div>
@section Scripts {
    <partial name="_GridScripts" />
    <script src="~/js/grids/managements/materialType-manamgenet-config.js"></script>
    
    <script>
        $(document).ready(function () {
            const grid = GridFactory.createGrid(MaterialTypeManagementGridConfig);
        });
    </script>
}